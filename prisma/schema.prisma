// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(cuid())
  name                String?
  email               String   @unique
  emailVerified       DateTime?
  image               String?
  hashedPassword      String
  otpCode             String?   // 6-digit OTP
  otpExpiresAt        DateTime? // Null when unused
  otpVerified         Boolean  @default(false)
  isAdmin             Boolean  @default(false)
  failedLoginAttempts Int      @default(0)
  lockoutUntil        DateTime?
  updatedAt           DateTime @updatedAt
}

model OtpToken {
  id        String   @id @default(cuid())
  email     String   
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email, expiresAt])
}

model Payment {
  id               String   @id @default(cuid())
  userId           String?           // links to your User table (optional)
  amount           Int               // amount in cents
  currency         String   @default("USD")
  squarePaymentId  String   @unique  // returned by Square (e.g. "GQX2..."), unique
  idempotencyKey   String   @unique  // what we used for the charge, prevents dupes
  status           String            // e.g. "COMPLETED", "APPROVED", "CANCELED", etc.
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // If you want the relation:
  // user             User?    @relation(fields: [userId], references: [id])
}

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.LongText
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}

model Lead {
  id              Int      @id @default(autoincrement())
  name            String
  email           String
  phone           String
  company         String?
  projectDetails  String
  estimatedBudget String
  timeline        String?
  createdAt       DateTime @default(now())
}