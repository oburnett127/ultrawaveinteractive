# Leave this file blank - safe to commit
# ======================================
# Backend Environment (Express)
# ======================================

# Environment
NODE_ENV=development
PORT=4000

# ======================================
# Database (MySQL / Prisma)
# ======================================
DATABASE_URL=mysql://USER:PASSWORD@HOST:3306/DATABASE_NAME

# ======================================
# Redis
# ======================================
REDIS_URL=redis://:PASSWORD@HOST:6379
REDIS_HOST=HOST
REDIS_PORT=6379
REDIS_PASSWORD=PASSWORD
REDIS_USE_TLS=true

# ======================================
# Authentication / Sessions
# ======================================
SESSION_SECRET=replace_with_long_random_string
NEXTAUTH_SECRET=replace_with_long_random_string
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_DEBUG=true

# ======================================
# reCAPTCHA (SECRET key)
# ======================================
RECAPTCHA_SECRET_KEY=replace_me

# ======================================
# Square (SERVER ONLY)
# ======================================
SQUARE_ACCESS_TOKEN=replace_me
SQUARE_WEBHOOK_SIGNATURE_KEY=replace_me
SQUARE_VERSION=2024-02-15

# ======================================
# Email / SMTP
# ======================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=replace_me
SMTP_PASS=replace_me

EMAIL_FROM=no-reply@example.com
MAIL_FROM_EMAIL=no-reply@example.com
MAIL_FROM_NAME=
CONTACT_TO_EMAIL=contact@example.com
CONTACT_RECEIVER_EMAIL=contact@example.com
SALES_TEAM_EMAIL=sales@example.com

# ======================================
# Internal Security
# ======================================
INTERNAL_API_TOKEN=replace_me
REVALIDATE_SECRET=replace_me

# ======================================
# OpenAI / Leads
# ======================================
OPENAI_API_KEY=replace_me
LEADS_API_TOKEN=replace_me

# ======================================
# Server / Ops
# ======================================
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=true
