// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(cuid())
  name                String?
  email               String   @unique
  emailVerified       DateTime?
  image               String?
  hashedPassword      String
  otpCode             String?   // 6-digit OTP
  otpExpiresAt        DateTime? // Null when unused
  otpVerified         Boolean  @default(false)
  isAdmin             Boolean  @default(false)
  failedLoginAttempts Int      @default(0)
  lockoutUntil        DateTime?
  updatedAt           DateTime @updatedAt
  payments            Payment[]

  // Speed up lookup during login validations
  @@index([emailVerified])
  @@index([otpVerified])
  @@index([lockoutUntil])
}

model OtpToken {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email, expiresAt])
}

model Payment {
  id               String   @id @default(cuid())
  userId           String   @db.VarChar(191)
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  amount           Int
  orderId          String?
  currency         String   @default("USD")
  squarePaymentId  String   @unique
  idempotencyKey   String   @unique
  status           String
  squareCustomerId String?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Optimize listing payments + filtering
  @@index([userId])
  @@index([createdAt])
  @@index([status])
  @@index([squareCustomerId])
}

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.LongText
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Improve sorting & blog list performance
  @@index([createdAt])
}

model Lead {
  id              Int      @id @default(autoincrement())
  name            String
  email           String
  phone           String
  company         String?
  projectDetails  String
  estimatedBudget String
  timeline        String?
  createdAt       DateTime @default(now())

  // Optimize lists + search + duplicate detection
  @@index([createdAt])
  @@index([email])
}
