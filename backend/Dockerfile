# =====================================================
# ðŸ§± STAGE 1 â€” Builder
# =====================================================
FROM node:20.11.1-slim AS builder

RUN apt-get update && \
    apt-get install -y openssl && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# 1ï¸âƒ£ Install backend deps
COPY backend/package*.json ./backend/
WORKDIR /app/backend
RUN npm ci

# 2ï¸âƒ£ Copy Prisma schema and generate client
COPY backend/prisma ./prisma
RUN ./node_modules/.bin/prisma generate --schema=prisma/schema.prisma

# 3ï¸âƒ£ Remove dev deps (AFTER generate)
RUN npm prune --omit=dev

# 4ï¸âƒ£ Copy remaining backend files
WORKDIR /app
COPY backend ./backend
COPY server.cjs ./server.cjs

# =====================================================
# ðŸš€ STAGE 2 â€” Runtime (MINIMAL, NON-ROOT)
# =====================================================
FROM node:20.11.1-slim AS runner

RUN apt-get update && \
    apt-get install -y openssl && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

ENV NODE_ENV=production
ENV PORT=8080

# ðŸ‘¤ Non-root user
RUN groupadd -r app && useradd -r -g app app

EXPOSE 8080

# â¤ï¸ Healthcheck
HEALTHCHECK --interval=30s --timeout=5s --start-period=20s --retries=3 \
  CMD node -e "fetch('http://127.0.0.1:'+(process.env.PORT||8080)+'/health').then(r=>process.exit(r.ok?0:1)).catch(()=>process.exit(1))"

# Copy backend runtime artifacts
COPY --from=builder --chown=app:app /app/backend ./backend
COPY --from=builder --chown=app:app /app/server.cjs ./server.cjs

USER app

# âœ… App only â€” NO npm, NO npx, NO migrations
CMD ["node", "server.cjs"]
