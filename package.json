{
  "name": "ultrawaveinteractive-monorepo",
  "version": "1.0.0",
  "private": true,
  "author": "Owen Burnett",
  "description": "Ultrawave Interactive website and backend monorepo",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
